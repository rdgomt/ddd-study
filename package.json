{
  "name": "ddd-study",
  "description": "A forum app made for practicing Domain-driven Design (DDD) concepts.",
  "main": "src/index.ts",
  "version": "1.0.0",
  "scripts": {
    "check-spell": "cspell \"src/**/*.{ts,tsx}\" --no-must-find-files --gitignore --unique --no-progress",
    "check-types": "tsc --noEmit",
    "lint": "eslint --max-warnings 0",
    "lint:fix": "eslint --fix",
    "prettify": "prettier --write --ignore-unknown",
    "test": "vitest run",
    "test:cov": "yarn test --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest"
  },
  "dependencies": {
    "dayjs": "^1.11.9"
  },
  "devDependencies": {
    "@cspell/dict-pt-br": "^2.1.4",
    "@faker-js/faker": "^8.0.2",
    "@rdgomt/eslint-config": "latest",
    "@types/node": "^20.3.3",
    "@vitest/ui": "^0.33.0",
    "cspell": "^6.31.1",
    "eslint": "^8.44.0",
    "prettier": "^2.8.8",
    "typescript": "^5.1.6",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.33.0"
  }
}
